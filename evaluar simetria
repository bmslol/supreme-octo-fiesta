#include <iostream>
using namespace std;
int main()
{
int numero[30],a;
int y=0,x=0, esSimetrico=1;
cout<<"Escribe numero:";
cin>>a;

numero[a];
x=numero[a]-1;
y = 0; 

while(y < x)
{
    if(numero[y++]!=numero[x--])
    esSimetrico = 0;
}
    if (esSimetrico)

    {
        cout<<"1\n";
    }

    else
    {
        cout<<"0\n";
    }
}

