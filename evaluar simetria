#include <iostream>
#include<string.h>
using namespace std;
int main()
{
char numero[80];
int y=0,x=0, esSimetrico=1;
cout<<"Escribe numero:";
cin>>numero;

x=strlen(numero);
y = 0; x=x-1;

while(y < x)
{
    if(numero[y++]!=numero[x--])
    esSimetrico = 0;
}
    if (esSimetrico)
    {
        cout<<" 1 \n";
    }

    else
    {
        cout<<" 0 \n";
    }
}

